{
  "root": true,
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {},
  "overrides": [
    {
      "files": "src/**/*.js",
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": "src/**/*.svelte",
      "plugins": [
        "svelte3"
      ],
      "processor": "svelte3/svelte3"
    }
  ]
}
